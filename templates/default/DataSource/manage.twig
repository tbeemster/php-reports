{% extends "html/page.twig" %}

{% block title %}Configure{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ base }}/public/css/report_list.css"/>
{% endblock %}

{% block header %}
{% endblock %}

{% block content %}
    <div class="row">
        <div id="table_of_contents" class="col-lg-2 col-md-3 hidden-xs hidden-sm bs-sidebar">
            <h2>Configuration</h2>
            <ol class="nav bs-sidenav">
                <li class="active">
                    <a href="{{ base }}/data-source/manage">Manage Data Sources</a>
                </li>
                <li class="disabled">
                    <a href="">Data Types</a>
                </li>
                <li class="disabled">
                    <a href="">Join Tables</a>
                </li>
            </ol>
        </div>

        <div id="report_list" class="col-lg-10 col-md-9 col-xs-12 col-lg-offset-2 col-md-offset-3">
            <h1 class="visible-phone">All Data Sources</h1>
            <div class="well well-small">
                <ul>
                    {% for dataSource in dataSources %}
                        <li>
                            <a href="{{ base }}/data-source/configure-tables/{{ dataSource.databaseName }}">{{ dataSource.databaseName }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="well well-small">
                <div>
                    <form action="" method="post">
                        <input type="hidden" name="subject" value="data-source"/>
                        <input type="hidden" name="action" value="add"/>

                        <label for="dbms">Database Management System</label>
                        <select id="dbms" name="dbms" class="form-control">
                            <option value="mysql" selected="selected">MySQL</option>
                        </select><br/>

                        <label for="host">Host</label>
                        <input id="host" type="text" name="host" placeholder="Host" value="localhost"
                               class="form-control"/><br/>

                        <label for="database_name">Database name</label>
                        <input id="database_name" type="text" name="database_name" placeholder="Database Name" value=""
                               class="form-control"/><br/>

                        <label for="user">User</label>
                        <input id="user" type="text" name="username" placeholder="User" value=""
                               class="form-control"/><br/>

                        <label for="password">Password</label>
                        <input id="password" type="password" name="password" placeholder="Password" value=""
                               class="form-control"/><br/>

                        <input type="submit" value="Configure" class="btn btn-primary"/>
                    </form>
                </div>
            </div>

        </div>
    </div>
{% endblock %}