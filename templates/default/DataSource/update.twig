<form action="" method="post">
    <input type="hidden" name="subject" value="data-source"/>
    <input type="hidden" name="action" value="add"/>

    <label for="dbms">Database Management System</label>
    <select id="dbms" name="dbms" class="form-control">
        <option value="mysql" selected="selected">MySQL</option>
    </select><br/>

    <label for="host">Host</label>
    <input id="host" type="text" name="host" placeholder="Host" value="localhost"
           class="form-control"/><br/>

    <label for="database_name">Database name</label>
    <input id="database_name" type="text" name="database_name" placeholder="Database Name" value=""
           class="form-control"/><br/>

    <label for="user">User</label>
    <input id="user" type="text" name="username" placeholder="User" value=""
           class="form-control"/><br/>

    <label for="password">Password</label>
    <input id="password" type="password" name="password" placeholder="Password" value=""
           class="form-control"/><br/>

    <input type="submit" value="Configure" class="btn btn-primary"/>
</form>